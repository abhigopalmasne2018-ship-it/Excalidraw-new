{
  "name": "draw-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "cd packages/db && npx prisma generate",
    "db:push": "cd packages/db && npx prisma db push",
    "db:migrate": "cd packages/db && npx prisma migrate dev",
    "setup": "pnpm install && pnpm db:generate && pnpm db:push",
    "docker:reset": "./scripts/reset-db.sh",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down -v",
    "dev:setup": "./scripts/dev-setup.sh"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
